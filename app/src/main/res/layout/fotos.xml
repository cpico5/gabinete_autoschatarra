<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083">


        <!-- android:id="@+id/layPreg30" -->



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- DATOS DEL REPORTE -->




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:text="Fotografía1"
                        android:textAlignment="center"
                        android:textColor="#00AE42"
                        android:textSize="17sp"
                        android:textStyle="bold" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="199dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="199dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnGaleria1"
                            android:layout_width="83dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/ic_biblio2"
                            android:baselineAligned="false"
                            android:onClick="loadImagefromGallery1" />

                        <Button
                            android:id="@+id/btnCamera1"
                            android:layout_width="83dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/ic_camara"
                            android:baselineAligned="false"
                            android:onClick="foto1" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imagen"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp" />

                    </LinearLayout>




                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Fotografía2"
                    android:textAlignment="center"
                    android:textColor="#00AE42"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="199dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="199dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnGaleria2"
                            android:layout_width="83dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/ic_biblio2"
                            android:baselineAligned="false"
                            android:onClick="loadImagefromGallery2" />

                        <Button
                            android:id="@+id/btnCamera2"
                            android:layout_width="83dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/ic_camara"
                            android:baselineAligned="false"
                            android:onClick="foto2" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imagen2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp" />

                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>

<!--        //////////////  FOTOGRAFIA 2 /////////////////-->




        <!-- //////////////////////////////////////  BOTONES  /////////////// -->

    </ScrollView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="68dp" />


</android.support.constraint.ConstraintLayout>